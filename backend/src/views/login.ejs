<% include partials/_header %>
<div class="login">
    <br />
    <h3 class="text-center">
        <%= TitleLogin %>
    </h3>
    <% if (false) { %>
        <h3 class="errorLogin text-center"><%= loginFailed %></h3>
    <% } %>
    <br />
    <form action="/login" method="POST" AUTOCOMPLETE='OFF'>
        <div class="form-group row">
            <label for="inputEmail3" class="col-sm-3 col-form-label col-form-label-sm">
                <%= LabelUsername %></label>
            <div class="col-sm-9">
                <input type="text" id="username" name="username" class="form-control form-control-sm" placeholder="<%= placeholderUsername %>">
                <span id="errUsername" class="error">
                    <%= errorUsername %></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword3" class="col-sm-3 col-form-label col-form-label-sm">
                <%= LabelPassword %></label>
            <div class="col-sm-9">
                <input type="password" id="password" name="password"  class="form-control form-control-sm" placeholder="<%= placeholderPassword %>" AUTOCOMPLETE='OFF'>
                <span id="errPassword" class="error">
                    <%= errorPassword %></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="Button" class="col-md-3 col-form-label-sm"></label>
            <div class="col-sm-9">
                <button id="buttonLogin" type="submit" class="btn btn-success btn-sm button" onclick="return CheckValidateLogin()">
                    <%= ButtonLogin %></button>
            </div>
        </div>
    </form>
</div>

<script>
    $('#errUsername').hide();
    $('#errPassword').hide();
</script>

<% include partials/_footer %>
